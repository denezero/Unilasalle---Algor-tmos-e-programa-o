#include <stdio.h>
#include <math.h>
 

//usuário  do github: denezero

int main() {
    
char calc;
float num1, num2;
float raiz(float num1) { return sqrt(num1); }
 

//Descrição da atividade
printf("Autor: Dênis da Silva santos \n");
printf("Curso: Redes de computadores \n") ;
printf("Universidade: Unilasalle \n");
printf("Código de aluno: 202221620 \n");

//sessão de inserção de dados

//tipo de operação escaneada por '+', '-', '/', '*', 'r', '^'
printf("Digite qual operação você quer fazer: ");
scanf("%c, %s", &calc);

//escaneamento dos numeros para o operador
printf("Digite o número que deseja calcular, ou dois números separados por VÍRGULA , : ");
scanf("%f, %f", &num1, &num2);

 
//função de cálculo a partir de cases
    switch (calc){
        
        //sessão da adição
    case '+':
        printf("o resultado de: %.1f + %.1lf = %.1lf", num1, num2, num1 + num2);
        break;
   
        
        //sessão da subtração
    case '-':
        printf("o resultado de: %.1f - %.1lf = %.1lf", num1, num2, num1 - num2);
        break;
    
        //sessão da multiplicação
    case '*':
        printf("o resultado de: %.1f * %.1lf = %.1lf", num1, num2, num1 * num2);
        break;
    
        //sessão da divisão
    case '/':
        printf("o resultado de: %.1f / %.1lf = %.1lf", num1, num2, num1 / num2);
        break;
        
        //sessão da raiz
    case 'r':
        printf("o resultado da raiz quadrada é: %.1lf  ", raiz(num1));
        break;
        
        //sessão da potência
    case '^':
        printf("o resultado com potência de %.1lf é = %.1lf", (num1, num2), pow(num1,num2));
        break;
   
       //a operação não é valida
    default:
    printf ("Erro, a operação não está correta!");
    }
}

